# コンパイル
.PHONY: all
all:
	make -C ../src/ all

# イメージ作成
.PHONY: image
image: all
	make -C ../src/ image

# 全生成ファイルの削除
.PHONY: clean
clean:
	make -C ../src/ clean
	make -C ../install/ clean
	-rm -rf obj


