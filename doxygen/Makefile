#******************************************************************************#
#******************************************************************************#
#* マクロ設定                                                                 *#
#******************************************************************************#
# Doxygenコンフィグ
LIB_CONFIG  = ./lib.cnf
TOOL_CONFIG = ./tool.cnf

# Doxygen出力先
LIB_OUTPUT  = ./lib
TOOL_OUTPUT = ./tool

# Doxygenログ
LOG_DIR  = ./log
LIB_LOG  = $(LOG_DIR)/lib.log
TOOL_LOG = $(LOG_DIR)/tool.log


#******************************************************************************#
#* phonyターゲット                                                            *#
#******************************************************************************#
# サブディレクトリも含めたコンパイル
.PHONY: all
all: lib tool

# lib
.PHONY: lib
lib: $(LOG_DIR) $(LIB_CONFIG)
	@echo "*** lib ***"
	doxygen $(LIB_CONFIG)
	@cat $(LIB_LOG)
	@echo ""

# tool
.PHONY: tool
tool: $(LOG_DIR) $(TOOL_CONFIG)
	@echo "*** tool ***"
	doxygen $(TOOL_CONFIG)
	@cat $(TOOL_LOG)
	@echo ""

# 全生成ファイルの削除
.PHONY: clean
clean:
	-rm -rf $(LIB_OUTPUT)
	-rm -rf $(TOOL_OUTPUT)
	-rm -rf $(LOG_DIR)

#******************************************************************************#
#* 生成規則                                                                   *#
#******************************************************************************#
# log directory
$(LOG_DIR):
	mkdir -p $(LOG_DIR)


#******************************************************************************#
