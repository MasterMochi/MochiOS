#******************************************************************************#
#******************************************************************************#
#* マクロ設定                                                                 *#
#******************************************************************************#
# Doxygenコンフィグ
LIB_CONFIG  = ./lib.cnf

# Doxygen出力先
LIB_OUTPUT  = ./lib

# Doxygenログ
LOG_DIR  = ./log
LIB_LOG  = $(LOG_DIR)/lib.log


#******************************************************************************#
#* phonyターゲット                                                            *#
#******************************************************************************#
# サブディレクトリも含めたコンパイル
.PHONY: all
all: lib

# lib
.PHONY: lib
lib: $(LOG_DIR) $(LIB_CONFIG)
	@echo "*** lib ***"
	doxygen $(LIB_CONFIG)
	@cat $(LIB_LOG)
	@echo ""

# 全生成ファイルの削除
.PHONY: clean
clean:
	-rm -rf $(LIB_OUTPUT)
	-rm -rf $(LOG_DIR)


#******************************************************************************#
#* 生成規則                                                                   *#
#******************************************************************************#
# log directory
$(LOG_DIR):
	mkdir -p $(LOG_DIR)


#******************************************************************************#
